<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/ejb-jar_3_2.xsd"
         version="3.2">
    <display-name>Azure AD Authentication EJB</display-name>
    
    <enterprise-beans>
        <session>
            <ejb-name>AzureADAuthServiceImpl</ejb-name>
            <business-remote>com.azuread.integration.service.AzureADAuthService</business-remote>
            <ejb-class>com.azuread.integration.service.impl.AzureADAuthServiceImpl</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
    </enterprise-beans>
</ejb-jar>
